<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light">
    </style>

    <style name="textView" parent="@android:style/Widget.TextView">
        <item name="android:padding">@dimen/shortMargin</item>
    </style>

    <style name="textViewTutorial">
        <item name="android:textColor">@color/tutorialColor</item>
        <item name="font">JandaCurlygirlChunky.ttf</item>
    </style>

    <style name="separator">
        <item name="android:id">@+id/iSeparator</item>
		<item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/separatorSize</item>
		<item name="android:focusable">false</item>
		<item name="android:scaleType">fitXY</item>
		<item name="android:src">@color/separatorColor</item>
		<item name="android:contentDescription">separator</item>
    </style>

    <style name="separatorVertical" parent="separator">
		<item name="android:layout_width">@dimen/separatorSize</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginTop">@dimen/shortMargin</item>
        <item name="android:layout_marginBottom">@dimen/shortMargin</item>
    </style>

    <style name="actionBarItem">
        <item name="android:background">?android:attr/actionBarItemBackground</item>
    </style>

    <style name="rowLabel">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="row">
        <item name="android:padding">@dimen/shortMargin</item>
    </style>
</resources>
